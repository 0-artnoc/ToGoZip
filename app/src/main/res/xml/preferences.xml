<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:icon="@drawable/ic_launcher"
    android:key="preferences">
    <PreferenceCategory
        android:key="first_category"
        android:title="Settings">

        <!-- EditTextPreference -->
        <de.k3b.android.widgets.EditTextPreferenceWithSummary
            android:key="zipfile"
            android:summary="Zip where Files are added to."
            android:title="Output Zip File" />
        <!--
            </PreferenceCategory>
            <PreferenceCategory
                android:title="Diagnostics"
                android:key="second_category">
        -->
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="isDebugEnabled"
            android:summary="Debug Messages copied to clipboard and added to LogCat"
            android:title="Debug Mode" />

        <de.k3b.android.widgets.AboutDialogPreference
            android:key="about"
            android:title="@string/about_summary" />

    </PreferenceCategory>
</PreferenceScreen>
